public class NameManager {

    String myName = "Tamta Sivsivadze";

    //Methods first and last name
    public String getFirstName() {
        String[] values = myName.split(" ");
        return values[0];
    }

    public String getSurname() {
        String[] values = myName.split(" ");
        return values[values.length - 1];
    }
// Main method to test the code

    public static void main(String[] args) {
        NameManager manager = new NameManager();
        System.out.println("First Name: " + manager.getFirstName());
        System.out.println("Surname: " + manager.getSurname());
    }


                public static void doSomething() {
                    System.out.println("I am doing something");

        }

    }

